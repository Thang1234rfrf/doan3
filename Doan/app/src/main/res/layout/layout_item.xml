<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"

    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:src="@drawable/chillhop_vol2_nl"
            android:scaleType="fitXY"
            app:riv_border_color="#474444"
            app:riv_border_width="2dp"
            android:background="#FFFFFF"
            app:riv_oval="false" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/play" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_font"
            android:text="Tên bài hát"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtCaSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/font_ten"
            android:textSize="13sp"
            android:text="Tên Ca Sĩ" />
    </LinearLayout>


</LinearLayout>