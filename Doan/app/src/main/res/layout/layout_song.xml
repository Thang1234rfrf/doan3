<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"

    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >



        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/chillhop_vol2_nl"
            app:riv_border_color="#D4DCD5"
            app:riv_border_width="2dp"
            app:riv_corner_radius="5dp"
            app:riv_oval="false" />


    <LinearLayout
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTenBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_font"
            android:text="Tên bài hát"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtCaSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_ten"
            android:text="Tên Ca Sĩ"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="14dp"
      android:layout_gravity="center"
        app:srcCompat="@drawable/more" />


</LinearLayout>