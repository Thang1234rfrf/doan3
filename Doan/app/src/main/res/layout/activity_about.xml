<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidUnknownAttribute -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#212121"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/chillhop_vol2_nl"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/about_header"
                    fontPath="fonts/interbold.otf"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Lít sừn mu síc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="#fbfbfb"
                    android:textSize="33sp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingBottom="16dp"
                        android:paddingEnd="16dp"
                        android:text="Info"
                        fontPath="fonts/interbold.otf"
                        android:textSize="18sp"
                        android:textColor="#ACB67F"
                        tools:ignore="MissingPrefix,RtlSymmetry"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.1"
                        android:textColor="#fbfbfb"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingEnd="16dp"
                        android:text="version"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="#80fbfbfb" tools:ignore="RtlSymmetry"/>

                    <TextView
                        android:id="@+id/version_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#fbfbfb"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flavour"
                        android:textColor="#80fbfbfb"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="InterdimensionalBoop"
                        android:textColor="#fbfbfb"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Codename"
                        android:textColor="#80fbfbfb"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">


                    <TextView
                        android:id="@+id/himanshu"
                        fontPath="interbold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Mr.peter"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="#fbfbfb"
                        android:textSize="20sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="UI Design"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="#80fbfbfb"
                        tools:ignore="HardcodedText" />

                    <TextView
                        fontPath="SanFranciscoM.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ookoko"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="#fbfbfb"
                        android:textSize="20sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ookokoo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="#80fbfbfb"
                        tools:ignore="HardcodedText" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="170dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="10dp"
                            android:padding="12dp"
                            android:text="support"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"

                            android:textSize="18sp"
                            app:backgroundTint="#29b6f6"
                            tools:ignore="MissingPrefix" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/donate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="12dp"
                            android:text="donate"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textSize="18sp"
                            app:backgroundTint="#ff5023"
                            tools:ignore="MissingPrefix" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>